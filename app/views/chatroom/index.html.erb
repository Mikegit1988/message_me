<h4 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
  Say something
</h4>

    <div class="ui two column grid"><!--define a grid container-->
        <!--adding a feed-->
        <div class="twelve wide column">
            <div class="ui fluid raised card chatbox"><!--Adding a card to make the element more concistence-->
                <div class="content">
                    <div class="ui feed">
                      <!--display all the messages using a iterator-->
                        <% @messages.each do |message| %>
                          <div class="event">
                                <div class="content">
                                    <div class="summary">
                                        <em><%= message.user.username %></em>: <%= message.body %>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <!--Adding a vertical menu-->
        <div class="four wide column">
            <div class="ui fluid raised card chatbox"> <!--Adding a card to make the element more concistence-->
                <div class="content">
                    <div class="ui inverted vertical menu">
                      <a class="active item">
                        Home
                      </a>
                      <a class="item">
                        Messages
                      </a>
                      <a class="item">
                        Friends
                      </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
